# Configuración básica
NODE_ENV=development
PORT=9000
JWT_SECRET=should-be-at-least-32-characters
COOKIE_SECRET=should-be-at-least-32-characters

# Base de datos (SQLite para desarrollo local)
DATABASE_URL=postgres://localhost/medusa-store
# Para usar SQLite local:
# DATABASE_URL=sqlite://./medusa.db

# CORS - URLs permitidas
ADMIN_CORS=http://localhost:7000,http://localhost:7001
STORE_CORS=http://localhost:3000,http://localhost:5173

# Redis (opcional, para caché)
# REDIS_URL=redis://localhost:6379

# ========================================
# MÉTODOS DE PAGO (Descomentados = Activos)
# ========================================

# Manual Payment (Siempre activo por defecto)
# No requiere configuración

# ---- STRIPE (Comentado por defecto) ----
# Descomenta estas líneas cuando tengas las claves de Stripe
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ---- PAYPAL (Comentado por defecto) ----
# Descomenta estas líneas cuando tengas credenciales de PayPal
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret
# PAYPAL_SANDBOX=true

# ========================================
# SERVICIOS ADICIONALES (Opcionales)
# ========================================

# SendGrid para emails (opcional)
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM=tienda@levantatecuba.com

# AWS S3 para almacenamiento (opcional)
# S3_URL=https://your-bucket.s3.amazonaws.com
# S3_BUCKET=your-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your_access_key
# S3_SECRET_ACCESS_KEY=your_secret_key

# Medusa Admin
OPEN_BROWSER=false
