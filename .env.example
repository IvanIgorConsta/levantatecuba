# ============================================
# REDACTOR IA - IMAGEN (FLAGS DE CONTROL)
# ============================================
# Sistema de flags para control quirúrgico del pipeline de imágenes
# Por defecto: MODO RAW/PASSTHROUGH (todos desactivados)

# PIPELINE MODE: Modo del pipeline de imágenes
# - simple: contenido → prompt → proveedor → guardar (SIN detectores/resolvers/negativos)
# - augmented: pipeline completo con PersonDetector, EditorialResolver, ImageTheme, etc.
# RECOMENDADO: simple (flujo mínimo y confiable)
IMAGE_PIPELINE_MODE=simple

# Desactivar detección de personas (PersonDetector)
IMG_DISABLE_PERSON_DETECTOR=true

# Desactivar modo editorial (búsqueda de imágenes reales vía Bing)
IMG_DISABLE_EDITORIAL_MODE=true

# Desactivar reglas QA heurísticas
IMG_DISABLE_QA_RULES=true

# Desactivar inyección automática de reglas anti-texto
IMG_DISABLE_ANTI_TEXT=true

# Desactivar selección automática de contexto/tema
IMG_DISABLE_AUTO_CONTEXT=true

# Desactivar negativos automáticos basados en contexto
IMG_DISABLE_AUTO_NEGATIVE=true

# Modo de construcción de prompts: raw | minimal | augmented
# - raw: prompt crudo sin modificar (RECOMENDADO)
# - minimal: mínimo enriquecimiento (editorial realism)
# - augmented: contexto completo (tema + keywords + negativos)
IMG_PROMPT_MODE=raw

# Proveedor de imágenes por defecto
IMG_DEFAULT_PROVIDER=dall-e-3

# Forzar proveedor específico (ignora lógica interna)
# Opciones: dall-e-3, dall-e-2, stable-diffusion, replicate_xxx
# IMG_FORCE_PROVIDER=dall-e-3

# Modo QA minimal (solo anti-texto, sin negativos de contexto)
# IMG_THEME_QA_MINIMAL=true

# Usar imágenes editoriales reales cuando estén disponibles
# IMG_USE_EDITORIAL_COVER=true

# ============================================
# REDACTOR IA - SAFETY SYSTEM (ANTI-400)
# ============================================
# Sistema de sanitización para evitar bloqueos del proveedor

# Activar sanitizador de prompts para contenido sensible
# - on: Activo (detecta y neutraliza vocabulario sensible automáticamente)
# - off: Desactivado (prompts sin filtrar)
# RECOMENDADO: on (previene errores 400 de safety system)
IMAGE_PROMPT_SANITIZER=on

# Desactivar RAW mode automáticamente si se detecta contenido sensible
# - true: RAW se desactiva automáticamente para contenido político/seguridad
# - false: RAW permanece activo incluso con contenido sensible
# - Nota: si IMAGE_RAW_MODE=force, RAW nunca se desactiva
# RECOMENDADO: true (previene 400 en contenido sensible)
# IMAGE_RAW_AUTO_DISABLE_ON_SENSITIVE=true

# Forzar RAW mode (sin sanitización ni fallbacks)
# - force: RAW mode permanece activo siempre, incluso con contenido sensible
# - off: RAW mode respeta detección de contenido sensible
# RECOMENDADO: off (permite sanitización cuando sea necesario)
# IMAGE_RAW_MODE=off

